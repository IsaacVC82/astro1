# Habilitar el uso de reescritura de URLs
RewriteEngine On

# Redirigir automáticamente HTTP a HTTPS (si tienes un certificado SSL)
RewriteCond %{HTTPS} off
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Configuración de errores personalizados
ErrorDocument 404 /404.html
ErrorDocument 500 /500.html

# Permitir la ejecución de archivos PHP
AddHandler application/x-httpd-php .php

# Evitar el acceso a archivos sensibles
<Files ".ht*">
    Require all denied
</Files>
