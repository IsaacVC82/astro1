---
import LanguageSwitcher from '../components/LanguageSwitcher.astro';
import '../styles/globals.css';
const { currentLang, translations } = Astro.props;
---

<!DOCTYPE html>
<html lang={currentLang}>
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{translations.title}</title>
</head>
<body>
  <header class="bg-blue-600 text-white p-4">
    <div class="container mx-auto flex justify-between items-center">
      <div class="text-xl font-bold">{translations.presentation}</div>
      <nav>
        <ul class="flex space-x-4">
          <li><a href={`/${currentLang}/`}>{translations.home}</a></li>
          <li><a href={`/${currentLang}/Formulario`}>{translations.contact}</a></li>
          <li><a href="/blog">Blog</a></li>
        </ul>
      </nav>
      <LanguageSwitcher />
      
    </div>
  </header>

  <slot />

  <footer class="bg-blue-500 text-white py-4 mt-12">
    <div class="container mx-auto text-center">
      <p>&copy; 2025 {translations.title}. {translations.rights_reserved}</p>
    </div>
  </footer>
</body>
</html>
