---
import Layout from '../../layouts/Layout.astro';
import { loadTranslations } from '../../translations';

// Funci칩n para generar las rutas
export async function getStaticPaths() {
  // Definir los idiomas soportados
  const supportedLangs = ['es', 'en'];

  return supportedLangs.map((lang) => ({
    params: { lang }, // Par치metro din치mico
    props: { lang },  // Pasar el idioma como prop
  }));
}

// Obtener el idioma de los par치metros
const { lang } = Astro.params;
const translations = loadTranslations(lang);
---

<Layout currentLang={lang} translations={translations}>
  <section class="container mx-auto py-16 text-center">
    <h2 class="text-3xl font-semibold text-blue-600">{translations.thank_you}</h2>
    <p class="mt-4 text-lg text-gray-700">{translations.form_thank_you}</p>
    <a href={`/${lang}/Formulario`} class="mt-6 inline-block bg-blue-600 text-white px-6 py-2 rounded-xl hover:bg-blue-700 transition">
      {translations.form_return}
    </a>
  </section>
</Layout>